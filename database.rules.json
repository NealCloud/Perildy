{
  "rules": {
		
		"Categories":{
			".read": "auth != null",
			".write": "auth != null"
		},
		
		"Questions":{
			".read": "auth != null",
			".write": "auth != null"
		},
		
		"Games":{
			".read": "auth != null",
			
			"$gameName":{
				".write": "!data.exists()",
        
				"Category":{
					".write":"auth != null"
				},
				
				"Players":{
				".write":"auth != null"
				},
				
				"Timers":{
					".write":"auth != null"
				},
				
				"Game":{
					"CurrentAnswer": {
						".write": "auth != null"
					},
					"CurrentQuestion": {
						".write": "auth != null"
					},
					"CurrentValue": {
						".write": "auth != null"
					},
					"HotSeat": {
						".write": "auth != null"
					},
					"PickPhase": {
						".write": "auth != null"
					},
					"QuestionPhase": {
						".write": "auth != null"
					},
					"Started": {
						".write": "auth != null"
					},
					"TempSeat": {
						".write": "data.val() == false || auth.uid == root.child('Games/' + $gameName + '/Players/PlayerInfo/' + data.val() + '/uid').val()"
					},
					"totalQuestions": {
						".write": "auth != null"
					}
				}
			}			
			
		}		
   
  }
}